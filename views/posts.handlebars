{{#each posts}}
<div class='post'>
    <img src="{{imgurl}}" id='img'>
    <h1 id='title'>Title : {{title}}</h1>
    <h2 id='user'>User : {{user}}</h2>
    <p id='ingredients'>Ingredients : {{ingredients}}</p>
    <p id='recipe'>Recipe : {{recipe}}</p>
    <p id='commentary'>Commentary : {{commentary}}</p>
</div>
{{/each}}

<div class='popular-posts'>
    <h1 id='filter-header'>Post Filters</h1>
    <h1>Popular Posts</h1>
    <div class='categories'>
        <a href=#>All Time</a>
        <a href=#>Previous Week</a>
        <a href=#>Previous 24 Hours</a>
    </div>
    <h1>Username</h1>
    <h1>Title</h1>
    <h1>Best</h1>   
</div>